<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".SettingsActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        app:title="Settings"
        app:titleTextColor="@color/colorAccent"
        android:id="@+id/settings_toolbar"
        >
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_below="@+id/settings_toolbar"
        android:layout_above="@+id/linlay_email_settings"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/orrodho_logo"
        android:id="@+id/settings_image"
        />




    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/linlay_email_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"

        >



        <TextView
            android:id="@+id/settings_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="18sp"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:textColor="#FF9100"
            android:padding="10dp"

            />

        <TextView
            android:id="@+id/settings_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username@gmail.com"
            android:textSize="18sp"
            android:fontFamily="sans-serif-thin"
            android:textColor="#090808"
            android:padding="10dp"


            />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linlay_email_settings"
        android:text="Change Password"
        android:background="@drawable/roundedorangebutton"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:id="@+id/changepasswordbutton"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-thin"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textSize="16sp"
        android:text="version: 1.0"
        android:id="@+id/version_label"
        android:fontFamily="sans-serif-thin"
        android:textColor="#000"
        />

    <TextView
        android:layout_above="@+id/version_label"
        android:layout_width="wrap_content"
        android:linksClickable="true"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ksaifahmed4@gmail.com"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/dev_label"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:layout_above="@+id/dev_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Developed by KSA"
        android:fontFamily="sans-serif-thin"
        android:textColor="#000"
        />




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#FFF"
    >


    <ImageView
        android:id="@+id/chat_user_photo"
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_height="match_parent"
        android:src="@drawable/orrodho_logo_round" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/chat_user_photo"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/chat_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_name_myClient"
            android:textAlignment="textStart"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/last_message_of_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi There Peer"
            android:textAlignment="textStart"
            android:textSize="15sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/time_of_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:text="2:30"
        android:textSize="14sp"
        android:textStyle="italic" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/divider">

    </View>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#FFF"
    >

    <ImageView
        android:id="@+id/myclient_user_photo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/orrodho_logo_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/myclient_user_photo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myclient_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name myClient"
            android:layout_marginStart="3dp"
            android:textSize="16sp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/messageButton"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:background="@drawable/roundedacceptbutton"
                android:text="Chat"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/removeButton"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:background="@drawable/roundedremovebutton"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/divider">

    </View>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#FFF"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/unreg_user_photo"
        android:layout_width="50dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/login_photo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/unreg_user_photo"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/unreg_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user namey"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/unreg_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_name@gmail.com"
            android:textAlignment="textStart"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="79dp"
        android:layout_height="31dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/roundedacceptbutton"
        android:text="Accept"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/divider">

    </View>



</RelativeLayout>